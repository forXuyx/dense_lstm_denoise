{
    "name": "GW_Denoise",
    "n_gpu": 1,

    "arch_module": "model.sepformer",
    "arch": {
        "type": "Sepformer",
        "args": {
            "N": 32,
            "L": 4,
            "H": 4,
            "K": 250,
            "Global_B": 1,
            "Local_B": 1
        }
    },
    "data_loader": {
        "type": "GWDataLoader",
        "args":{
            "data_dir": "data/GW/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "mse_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/test_model/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
